<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codepath.com.fizzylist">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="FizzyList"
        android:supportsRtl="true">
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/fizzytheme1"
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@style/fizzytheme1"
            android:name=".activities.EditTaskActivity"
            android:label="Edit Task" >
        </activity>
        <activity
            android:theme="@style/fizzytheme1"
            android:name=".activities.NewTaskActivity"
            android:label="Add Task" >
        </activity>
        <activity
            android:theme="@style/fizzytheme1"
            android:name=".activities.DetailTaskActivity"
            android:label="Task Detail" >
        </activity>
    </application>

</manifest>